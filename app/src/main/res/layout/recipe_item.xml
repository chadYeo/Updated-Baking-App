<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/recipe_item_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_selector">

            <ImageView
                android:id="@+id/dessert_imageView"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/desserts_img" />

            <TextView
                android:id="@+id/recipe_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/dessert_imageView"
                android:textColor="@android:color/black"
                android:text="Recipe: " />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/recipe_label"
                android:layout_toRightOf="@+id/recipe_label"
                android:textColor="@android:color/black"
                android:text="cookie" />

            <TextView
                android:id="@+id/serving_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/dessert_imageView"
                android:layout_below="@+id/recipe_label"
                android:textColor="@android:color/black"
                android:text="Serving: " />

            <TextView
                android:id="@+id/serving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignBaseline="@+id/serving_label"
                android:layout_alignBottom="@+id/serving_label"
                android:layout_toEndOf="@+id/serving_label"
                android:layout_toRightOf="@+id/serving_label"
                android:textColor="@android:color/black"
                android:text="1000" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>