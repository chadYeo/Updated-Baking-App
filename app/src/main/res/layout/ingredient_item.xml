<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_recyclerview">

            <TextView
                android:id="@+id/ingredient_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:text="Ingredient: " />

            <TextView
                android:id="@+id/ingredient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ingredient_label"
                android:layout_toRightOf="@+id/ingredient_label"
                android:textColor="@android:color/black"
                android:text="Graham Crackkkkkeeeerrr" />

            <TextView
                android:id="@+id/quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ingredient_label"
                android:textColor="@android:color/black"
                android:text="Quantity: " />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ingredient_name"
                android:layout_alignStart="@+id/ingredient_name"
                android:layout_below="@+id/ingredient_name"
                android:textColor="@android:color/black"
                android:text="100" />

            <TextView
                android:id="@+id/measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_alignBottom="@+id/quantity"
                android:layout_toRightOf="@+id/quantity"
                android:textColor="@android:color/black"
                android:text="CUP" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>