<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/twoPane_linearLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/twoPane_list_fragment"
        android:name="com.example.chadyeo.updatedbakingapp.fragments.StepsListFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <fragment
        android:id="@+id/twoPane_detail_fragment"
        android:name="com.example.chadyeo.updatedbakingapp.fragments.StepsDetailFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>